{
    "scripts": {
        "test:ui": "concurrently --success first -k \"npm run _testrun\" \"npm run _testbuild\"",
        "test": "concurrently --success first -k \"npm run _testrun -- --console --once\" \"npm run _testbuild\"",
        "_testbuild": "cross-env NODE_ENV=test MAIN=test/main.js nollup -c",
        "_testrun": "wait-on http://localhost:8080 && mocha-istanbul-ui --watch --bootstrap test/bootstrap.js http://localhost:8080/main.[hash].js"
    },
    "devDependencies": {
        "@babel/core": "^7.3.4",
        "@babel/plugin-transform-react-jsx": "^7.3.0",
        "acorn-jsx": "^5.0.1",
        "babel-plugin-istanbul": "^5.1.1",
        "chai": "^4.2.0",
        "concurrently": "^4.1.0",
        "cross-env": "^5.2.0",
        "mocha-istanbul-ui": "file:../..",
        "node-sass": "^4.11.0",
        "nollup": "^0.6.3",
        "preact-render-spy": "^1.3.0",
        "rollup": "^1.1.0",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-glob-import": "^0.3.1",
        "rollup-plugin-hot-css": "0.0.5",
        "rollup-plugin-node-resolve": "^4.0.0",
        "wait-on": "^3.2.0"
    },
    "dependencies": {
        "preact": "^8.4.2"
    }
}
